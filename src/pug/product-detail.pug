                        li.col
                            +img('ratio ratio-prd', true, dirUploads + "product-detail/product/3.png")
                        li.col
                            +img('ratio ratio-prd ', true, dirUploads + "product-detail/product/1.png")
                .mt-30
                    .d-flex.justify-content-between
                        span.fw-600.fs-13 Numara seçimi
                        span.fs-13 
                            a(href="") Beden tablosu
                    ul.lv2.list-unstyled.py-30.case-size
