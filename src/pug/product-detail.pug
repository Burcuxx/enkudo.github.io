                    .bg-white.p-15.mt-25
                        span.fs-13.fw-600 Ayakkabı ID / Nakış işleme
                        .d-flex.py-15.gap-10
                            .ems-field
                                input#left-feet.form-control(type='text' name='left-feet' placeholder='Sol Ayak' value='')
                                span.char-count.fs-13 1/6
  
                            .ems-field
                                input#right-feet.form-control(type='text' name='left-feet' placeholder='Sağ Ayak' value='')
                                span.char-count.fs-13 1/6
                        .d-flex    
                            span.fs-13.lh-lg.mt-10.d-block.me-20 Ayakkabı ID hizmeti kapıda nakit ödeme siparişlerinde geçerli değildir.
                            a.btn.btn-coral.mt-20(href="") Ekle + 90TL
                        
