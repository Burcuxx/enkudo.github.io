                            +img('ratio ratio-prd', true, dirUploads + "product-detail/product/1.png").h-auto
                            .sold-right.px-15.px-lg-20
                                a(href="")
                                    span.fs-14.fs-lg-16.fw-600 Ayakkabı Temizleme Süngeri
                                span.mt-10.d-block 25.00 TL
                                a.btn.btn-outline-black.mt-20(href="") Sepete Ekle
