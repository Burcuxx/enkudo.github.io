extends layouts/default.pug

block prepend head
    - var pageTitle = "KoraySpor "
    - var pageDescription = "KoraySpor "
    - var pageName = "blog"
    - var pageClass = ""

block content
            .d-flex.justify-content-center.my-50
                +img('ratio-logo ratio-bg-remove', false, dirImages + 'logoblog.svg')
            .main-slider-section.overflow-hidden
                .container.px-0.px-lg-10
                    +swiper('mainSlider', false, true, false, true, true)(class="main-slider")
                        -for(var i=0; i<5; i++)
                            li.swiper-slide
                                .ratio.ratio-main-slider-mobile.ratio-md-main-slider.ratio-lg-main-slider
                                    picture
                                        source.lazy-picture(media='(max-width:0)' srcset='frontend/images/1x1.svg')
                                        source(media='(max-width: 767px)' srcset='uploads/banner/mhakem.jpg, uploads/banner/mhakem.jpg 2x')
                                        source(media='(min-width: 768px)' srcset='uploads/banner/hakem.jpg')
                                        img.w-100(src='uploads/banner/hakem.jpg' alt='slide 1')
                                .banner-overlay.banner-overlay-white
                                    .banner-title
                                        h3.fs-24 Türk Hakemler Uefa Şampiyonlar Liginde...
                                        p.fs-16.mt-10 Kalp ve damar üzerinde büyük etkileri bulunan beslenme, bu duruma uygun...
                                        .d-flex.align-items-center
                                            .py-10.px-10.bg-gray4.me-20.fs-13.fw-600 Beslenme
                                            span.fs-13.fw-600 1 Nisan 2021 - 7 dk okuma
                                    .swiper-progress-bar.position-absolute.start-0.bottom-0.w-100
                                        span.swiper-progress.d-block.swiper-progress-none
                .container.px-15.px-lg-10
                    .ems-tab.mt-30.mt-lg-60.corporate-sidebar.col-12
                        include includes/blog-menu
                        .ems-tab-content
                            - for (var x = 1; x < 3; x++)
                                div(rel="tab-"+x)
                                    .ems-tab-inner-content
                                        .row.row-cols-1.row-cols-lg-3.mt-20.mt-lg-30.position-relative
                                            - for (var y = 0; y < 9; y++)
                                                .blog-post.col.pb-20.pb-lg-60
                                                    .blog-post-body.arrow-hover.position-relative.bg-white
                                                        +picture("ratio ratio-1x1", false, dirUploads + "banner/balik.jpg", dirUploads + "banner/balik.jpg", dirUploads + "banner/balik.jpg").w-100
                                                        .blog-post-desc.mt-10.mt-lg-15.py-25.px-25
                                                            h3.blog-post-title.fw-600.fs-lg-24.fs-20.lh-1-25.arrow-box.position-relative Kalp Krizini Önleyen Sağlıklı Besinler
                                                            .blog-post-subtitle.fs-14.fs-lg-16.mt-10
                                                                p.lh-1-25.m-0 Geniş ürün yelpazesiyle, en eşsiz gözlük ve aksesuarlar şimdi KoraySpor Saat’te.
                                                            .d-flex.align-items-center.mt-15 
                                                                .py-10.px-10.bg-gray4.me-10.fs-13.fw-600 Beslenme
                                                                span.fs-lg-13.fw-600.fs-12 1 Nisan 2021 - 7 dk okuma
                                                            a.mt-25.d-block(href="/blog-detail.html") 
                                                                span  Daha Fazla
                                                                +icon("caret-right").fs-12
                                        .text-center.mb-40
                                            p.d-block.fs-13.fw-600 28 / 841
                                            <progress  value="32" max="100"> </progress>  
                                        .text-center
                                            a.btn.btn-dark.btn-lg.btn-icon-righ.text-centert(href="javascript:void(0)") 
                                                span.me-10 Daha fazla yükle 
                                                +icon("wicon-plus").fs-12