        .notfound.h-100.position-relative
            +picture('ratio ratio-1x1 ratio-lg-main-slider', true, dirImages + '404/4044.jpg', dirImages + '404/mobile4044.jpg', dirImages + '404/4044.jpg')(class="w-100", alt="slide 1")
            .img-wrap.fs-32.lh-1
                .notfound-desc.d-flex.flex-column
